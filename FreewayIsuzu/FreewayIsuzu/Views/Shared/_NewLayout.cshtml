    <style>
        span#phone h2
        {
            color: #fff !important;
        }
        td.gsc-search-button { width: 0% !important; }
        #ocational-carousel .item
        {
            margin: 0px;
            padding: 10px;
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            position: relative;
            cursor: pointer;
            background: #fff;
            border: 3px solid #fff;
            font-weight: bold;
            font-size: 15px;
            -webkit-transition: background .2s ease-out;
            -moz-transition: background .2s ease-out;
            -o-transition: background .2s ease-out;
            transition: background .2s ease-out;
        }

            #ocational-carousel .item .body-type
            {
                background-color: transparent;
            }

            #ocational-carousel .item img
            {
                width: 100%;
            }

        #owl-carousel .owl-item img
        {
            display: block;
            width: 100%;
            -webkit-transform-style: preserve-3d;
        }

        #ocational-carousel .item .body-type-hover
        {
            opacity: 0;
            -webkit-transition: all .2s ease-out;
            -moz-transition: all .2s ease-out;
            -o-transition: all .2s ease-out;
            transition: all .2s ease-out;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        #ocational-carousel .item:hover
        {
            background: #ddd;
        }

            #ocational-carousel .item:hover .body-type-hover
            {
                opacity: 1;
            }

        #ocational-carousel .item span
        {
            position: absolute;
            bottom: 0px;
            margin: 0 auto;
            left: 0;
            right: 0;
            color: black;
        }

        .owl-carousel .owl-dot, .owl-carousel .owl-nav .owl-next, .owl-carousel .owl-nav .owl-prev
        {
            cursor: pointer;
            cursor: hand;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .owl-next
        {
            right: -30px;
        }

            .owl-next:before
            {
                font-family: 'FontAwesome';
                /*content: "";*/
            }

        .owl-prev
        {
            left: -30px;
        }

            .owl-prev:before
            {
                font-family: 'FontAwesome';
                /*content: "";*/
            }

        .owl-prev, .owl-next
        {
            position: absolute;
            top: 37%;
            color: #aaa;
            font-size: 35px;
            -webkit-transition: all .2s ease-out;
            -moz-transition: all .2s ease-out;
            -o-transition: all .2s ease-out;
            transition: all .2s ease-out;
        }
    </style>
