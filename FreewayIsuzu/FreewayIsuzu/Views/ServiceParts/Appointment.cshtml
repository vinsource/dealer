@{
    ViewBag.Title = "Appointment";
}

@section meta{
    <meta name="description" content="Freeway Isuzu - Appointment ✓ Finding your used trucks ✓ new trucks ✓ Hundreds of cars for sale ✓ Good prices ✓ Daily updated" />
}

<link type="text/css" rel="stylesheet" href="/Content/css/salefinance.css" />
<link type="text/css" rel="stylesheet" href="/Content/css/responsive.css" />
<link type="text/css" rel="stylesheet" href="/Content/css/responsiveShowroom.css" />
<link type="text/css" rel="stylesheet" href="/Content/css/responsiveSpecials.css"/>
<style>
    #tertiary-cell h1 {
        color: #333 !important;
        font-size: 24px;
    }
</style>

<script src="/Scripts/js/pages/pc_schedule_service.js" type="text/javascript"></script>
<div class="row specials" id="content">

    <div class="span12" id="tertiary-cell">
        <!-- MAIN COLUMN CELL -->
        <div id="test-drive-listing">
            <!-- AD CELLS -->
            <h1>Schedule Service</h1>

            <form id="test-drive" method="post" action="" class="validate">
                <fieldset id="resAppForm">
                    <div id="error"></div>
                    <legend style="border: none; margin-top: 10px;"></legend>

                    <!-- Contact Form Include -->
                    <legend>Contact Info
                    </legend>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-user"></i></span>
                        <input maxlength="50" name="form_fname" class="required" id="form_fname" type="text" placeholder="First Name" title="First Name">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-user"></i></span>
                        <input maxlength="50" name="form_lname" class="required" id="form_lname" type="text" placeholder="Last Name" title="Last Name">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-envelope"></i></span>
                        <input maxlength="50" name="form_email" class="required" id="form_email" type="text" placeholder="Email" title="Email">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><b style="color: black !important;">#</b></span>
                        <input maxlength="50" name="form_phone" class="number required" id="form_phone" type="text" value="999-999-9999" title="Phone Number">
                    </div>
                    <legend>Appointment Date
                    </legend>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-calendar"></i></span>
                        <input maxlength="50" type="text" name="form_date" placeholder="Select a Date!" id="form_date" title="Select a Date">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-time"></i></span>
                        <input maxlength="50" type="text" name="form_time" class="required" id="form_time" placeholder="Enter a Time (ie. 12:00pm)" title="Enter a Time (ie. 12:00pm)">
                    </div>
                    <legend>Vehicle Info
                    </legend>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-star"></i></span>
                        <input maxlength="4" name="form_year" class="required number" id="form_year" type="text" placeholder="Year">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-star"></i></span>
                        <input maxlength="50" name="form_make" class="required" id="form_make" type="text" placeholder="Make">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-star"></i></span>
                        <input maxlength="50" name="form_model" class="required" id="form_model" type="text" placeholder="Model">
                    </div>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-star"></i></span>
                        <input maxlength="15" name="form_mileage" class="required" id="form_mileage" type="text" placeholder="Mileage">
                    </div>

                    <legend>Service Needed / Comments
                    </legend>
                    <div class="input-prepend control-group">
                        <span class="add-on"><i class="icon-list-alt"></i></span>
                        <select id="form_service_needed" name="servicetypes" tabindex="10" multiple="multiple" size="5" class="valid" style="width: 230px; height: 100px !important">
                            <option value="Oil Change">Oil Change</option>
                            <option value="Coolant Flush">Coolant Flush</option>
                            <option value="Transmission Flush">Transmission Flush</option>
                            <option value="Engine Tune-Up">Engine Tune-Up</option>
                            <option value="Tire Rotation">Tire Rotation</option>
                            <option value="Balance Tires">Balance Tires</option>
                            <option value="Front-end Alignment">Front-End Alignment</option>
                            <option value="Adjust Brakes">Adjust Brakes</option>
                            <option value="Replace Muffler">Replace Muffler</option>
                            <option value="State Inspection">State Inspection</option>
                            <option value="Air Conditioner Repair">Air Conditioner Repair</option>
                            <option value="Wash, Wax, and Clean Interior">Wash, Wax &amp; Interior Clean</option>
                            <option value="Other Service">Other Service</option>
                        </select>
                        <span id="resAppSpan" style="color: gray; margin-bottom: 0px; font-style: italic; display: block;">(Select multi services by keep "Ctrl or Shift" and click to select !)</span>
                    </div>
                    <div id="resAppComs" class="input-prepend control-group" style="margin-left: 40px;">
                        <span class="add-on"><i class="icon-comment"></i></span>
                        <textarea maxlength="3000" name="form_comments" id="form_comments" placeholder="Additional Comments"></textarea>
                    </div>

                </fieldset>
                <div class="submitLoadding">
                    <div class="submitLoadingText">*Sending...</div>
                </div>
                <input type="button" name="form_send" id="form_send" value="Submit">
            </form>
        </div>
        <!-- END OF AD CELLS -->

        <!-- FOOTER ROW -->
        @{ Html.RenderPartial("~/Views/Shared/_Footer.cshtml"); }
        <!-- END OF FOOTER ROW -->
    </div>
    <!-- END OF MAIN CELL -->
    <div class="span4" id="sidebar">
        <!-- CONTACT FORM ROW -->
        @{ Html.RenderPartial("~/Views/Shared/_ContactForm.cshtml"); }
        <!-- END OF CONTACT FORM ROW -->

        <!-- MAP ROW -->
        @{ Html.RenderPartial("~/Views/Shared/_Map.cshtml"); }
        <!-- END OF MAP ROW -->

        <!-- Dealerinfo ROW -->
        @{ Html.RenderPartial("~/Views/Shared/_DealerInfo.cshtml"); }
        <!-- END OF Dealerinfo ROW -->
    </div>
    <!-- END OF SIDEBAR CELL -->
</div>
<script type="text/javascript">
    var insertAppointmentApi = '/Email/InsertAppointment';
</script>