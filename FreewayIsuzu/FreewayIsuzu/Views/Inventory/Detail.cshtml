    var page = "/Inventory/Detail/";
    var detailUrl = "/Inventory/GetCarDetail";
    var similarMakeUrl = "/Inventory/GetSimilarMake";
    var similarBodyTypeUrl = "/Inventory/GetSimilarBodyType";
    var similarModelUrl = "/Inventory/GetSimilarModel";
</script>
